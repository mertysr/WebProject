<div class="container">
    
<%= form_with(model: face, local: true) do |form| %>
  <% if face.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(face.errors.count, "error") %> prohibited this face from being saved:</h2>

      <ul>
      <% face.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
  <div class="col-md-6 col-xs-6">
  <div class="field">
    <%= form.text_field :baslik, :class=>'form-control', :placeholder=>'Baslık'%>
  </div>
</div>

<div class="col-md-6 col-xs-6">    
  <div class="field">
    <%= form.text_field :ozet, :class=>'form-control', :placeholder=>'Özet' %>
  </div>
</div>
</div>
<div class="row">
<div class="col-md-12 col-xs-12">
  <div class="field">
    <%= form.cktext_area :icerik %>
  </div>
</div>
</div>
<center>
  <div class="actions">
      
      <%= form.submit ( form.object.new_record? ? "Kart Ekle" : "Kartı Güncelle") , :class=> 'btn2' %>
      
  </div>
  </center>
<% end %>

</div>















